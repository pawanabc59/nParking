<!DOCTYPE html>
<html>
<head>
	<title>Add Place</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style type="text/css">
		*{
			margin: 0;
			padding: 0;
		}

		#addPlaceForm{
			margin: auto auto;
			margin-top: 10vh;
			border: 1px solid black;
			padding: 5vh;
			border-radius: 50px;
		}
		img{
			margin-right: 2vh;
		}
	</style>
</head>
<body>

	<div>
		<% include navbar.ejs ;%>
	</div>

	<div class="container" id="addPlaceForm" style="margin-top: 18vh;">
		 
		<form action="/placeOwner/addPlace" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title">Name of the place:</label>
			    <input type="text" class="form-control" id="title" name="title" placeholder="Please Enter Name of your place" required>
			</div>
			<div class="form-group">
				<label for="address">Address:</label>
			    <input type="text" class="form-control" id="address" name="address" placeholder="Please Enter your address" required>
			</div>
			<div class="form-group">
			    <label for="slot">Slots:</label>
			    <input type="number" class="form-control" id="slot" name="slot" placeholder="Please number of slots" required>
			    
			</div>
			<div class="row">
				<div class="form-group row" style="margin-left: 3vh;">
				    <label for="arrivalTime">Opening Time :</label>
				    <input type="time" class="form-control" id="arrivalTime" name="arrivalTime" required>
				    
				</div>
				<div class="form-group row" style="margin-left: 20vh;">
				    <label for="closingTime">Closing Time:</label>
				    <input type="time" class="form-control" id="closingTime" name="closingTime" required>
				    
				</div>
			</div>

			<div>
				<label for="placeImages">Upload Image of your parking spot</label>
				<input type="file" class="form-control" name="placeImages" id="placeImages">
				<div id="gallery" style="margin-top: 3vh;">	</div>
			</div>

			  <button type="submit" class="btn btn-primary" style="margin-top: 4vh;">Submit</button>

		</form>

		<!-- <img src="/uploads/placeOwner/rajan@gmail.com/One_Piece2.png" alt="on" width="100" height="100"> -->

	</div>
	<div>
		
		<% include footer.ejs ;%>

	</div>

</body>

<script type="text/javascript">
	function previewImages(){
	var $preview = $('#gallery').empty();
	if (this.files){
		$.each(this.files, readAndPreview);
	}

	function readAndPreview(i,file){
		if(!/\.(jpe?g|png|gif)$/i.test(file.name)){
			return alert(file.name +" is not an image");
		}

		var reader = new FileReader();

		$(reader).on("load", function(){
			$preview.append($("<img/>", {src: this.result, height: 100}));
		});

		reader.readAsDataURL(file);
	}

}

$('#placeImages').on("change", previewImages);

</script>

</html>